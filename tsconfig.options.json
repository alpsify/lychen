{
  "extends": "tsconfig-moon/tsconfig.json",
  "compilerOptions": {
    "rootDir": "./", //If not setup gener TS6059 error on .vue files import
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "incremental": true,
    "noEmit": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,
    //QUASAR
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
